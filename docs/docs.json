{
  "openapi": "3.0.3",
  "info": {
    "title": "Title",
    "description": "Title",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "Books",
      "description": "Operations related to books"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Book": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "readOnly": true,
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "Sample Title"
          },
          "author": {
            "type": "string",
            "example": "John Doe"
          },
          "year": {
            "type": "integer",
            "example": 2022
          },
          "genre": {
            "type": "string",
            "example": "Fiction"
          }
        }
      }
    }
  },
  "paths": {
    "/api/book/": {
      "get": {
        "summary": "Get books",
        "tags": ["Books"],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          },
          {
            "name": "perPage",
            "in": "query",
            "description": "Number of items per page",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 10
            }
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorized",
            "content": {}
          },
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "result": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Book"
                          }
                        },
                        "count": {
                          "type": "integer",
                          "example": 0
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new book",
        "tags": ["Books"],
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Book"
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized",
            "content": {}
          },
          "403": {
            "description": "Forbidden",
            "content": {}
          },
          "200": {
            "description": "Successful creation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          }
        }
      }
    },
    "/api/book/{bookId}": {
      "get": {
        "summary": "Get a book by ID",
        "tags": ["Books"],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "description": "ID of the book to retrieve",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorized",
            "content": {}
          },
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Update a book by ID",
        "tags": ["Books"],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "description": "ID of the book to update",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Book"
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized",
            "content": {}
          },
          "403": {
            "description": "Forbidden",
            "content": {}
          },
          "204": {
            "description": "Successful update",
            "content": {
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a book by ID",
        "tags": ["Books"],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "description": "ID of the book to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorized",
            "content": {}
          },
          "403": {
            "description": "Forbidden",
            "content": {}
          },
          "204": {
            "description": "Successful deletion",
            "content": {}
          }
        }
      }
    }
  }
}
